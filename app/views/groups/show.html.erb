<p style="color: green"><%= notice %></p>
<div class="hero-head">
  <%content_for :page_title, @group.group %>
</div>

<hr>
<h2 class="level-item"><strong><%= @group.posts.count %></strong> -Posts</h2>
<section class="section">
  <div class="container">
    <div class="hide">
    <% @group.posts.each do |post|%>
      <div class="card">
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <p class="title is-4"> <%= link_to post.title, post %></p>
            </div>
          </div>
          <div class="content">
            <%= post.content %>
          </div>
        </div>
      </div>
      </div>
    <% end %>
  </div>
  <div class="level-item">
    <%= link_to "Edit this group", edit_group_path(@group) %> | |
    <%= link_to " Back to groups", groups_path %>
  </div>
  <div class="level-item">
    <%= button_to "Destroy this group", @group, method: :delete %>
  </div>
</section>


